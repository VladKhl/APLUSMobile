<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APLUS.Registration" BackgroundColor="White" Visual="Material">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Регистрация" TextColor="White" HorizontalTextAlignment="Center" FontSize="20" Margin="0, 0, 75, 0"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="login" TextColor="Black" BackgroundColor="#E8E8E8" Margin="40, 40" PlaceholderColor="Black" Placeholder="Логин" FontSize="15"/>
            <Entry x:Name="mail" TextColor="Black" BackgroundColor="#E8E8E8" Margin="40, 0" PlaceholderColor="Black" Placeholder="E-mail" FontSize="15"/>
            <Entry x:Name="pass1" TextColor="Black" BackgroundColor="#E8E8E8" Margin="40, 40" PlaceholderColor="Black" Placeholder="Пароль" FontSize="15"/>
            <Entry x:Name="pass2" TextColor="Black" BackgroundColor="#E8E8E8" Margin="40, 0" PlaceholderColor="Black" Placeholder="Пароль" FontSize="15"/>
            <Button Text="Зарегистрироваться" FontSize="9" Margin="40, 150, 40, 0" BackgroundColor="#00B2FF" CornerRadius="200" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>